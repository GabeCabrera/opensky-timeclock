# Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=your_neon_database_connection_string_here
DISABLE_DB_SSL=false

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Application Base URL (for links in emails)
APP_BASE_URL=http://localhost:3000

# Email (Resend only)
# Obtain an API key at https://resend.com/ and add your sending domain or use a @resend.dev address for testing.
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=OpenSky Time Clock <no-reply@yourdomain.com>